{
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "enableIvy": false
  },
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@gu/kownsl": ["libs/features/kownsl/src/index.ts"],
      "@gu/components": ["libs/shared/ui/components/src/index.ts"],
      "@gu/styling": ["libs/shared/ui/styling/src/index.ts"],
      "@gu/services": ["libs/shared/data-access/services/src/index.ts"],
      "@gu/models": ["libs/shared/data-access/models/index.ts"],
      "@gu/utils": ["libs/shared/utils/src/index.ts"],
      "@gu/zaak-detail": ["libs/features/zaak-detail/src/index.ts"],
      "@gu/search": ["libs/features/search/src/index.ts"],
      "@gu/workstack": ["libs/features/workstack/src/index.ts"],
      "@gu/reports": ["libs/features/reports/src/index.ts"],
      "@gu/forms": ["libs/features/forms/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
